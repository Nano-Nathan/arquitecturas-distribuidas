{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Compilar c++ notebook",
			"command": "D:\\Temp\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: D:\\Temp\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Compilar c++",
			"command": "C:\\Fast\\minGW\\bin\\g++.exe",
			"args": [
				"-std=c++11",
				"-O3",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${fileDirname}\\${fileBasenameNoExtension}.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:\\Fast\\minGW\\bin\\g++.exe"
		}
	]
}